<div class="edit-profile">

    <h2>Edit <%= @current_user.full_name%>'s Profile ✏️</h2>

    <%= form_for @current_user do |f| %>

    <div class="input-group">
        <%= f.label "First Name:" %><br>
        <%= f.text_field :first_name %> <br><br>
    </div>

    <div class="input-group">
        <%= f.label "Last Name:" %><br>
        <%= f.text_field :last_name %> <br><br>
    </div>

    <div class="input-group">
        <%= f.label "Username:" %><br>
        <%= f.text_field :username %> <br><br>
    </div>

    <div class="input-group">
        <%= f.label "Bio:" %><br>
        <%= f.text_area :bio %> <br><br>
    </div>

    <div class="input-group">
        <%= f.label "Please enter password_to confirm:" %><br>
        <%= f.password_field :password %> <br><br>
    </div>

        <%= f.submit "Update" %>
        <% end %>

</div>
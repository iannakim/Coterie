
<div class="user-show">

  <h2> Create a Meeting! ðŸ˜ƒ </h2>

    <%= form_for @meeting do |f| %>

  <div class="input-group">
      <%= f.label "Sub-category:" %><br>
      <%= f.collection_select :subcategory_id, @subcategories, :id, :name %><br>
  </div>

  <div class="input-group">
      <%= f.label "Title:" %><br>
      <%= f.text_field :title, :class => "text-field" %><br>
  </div>

  <div class="input-group">
      <%= f.label "Description:" %><br>
      <%= f.text_area :description, :class => "text-area" %><br>
  </div>

  <div class="input-group">
      <%= f.label "Time:" %>
      <%= f.datetime_select(:time, :default => { :hour => 23, :minute => 59 }) %><br>
  </div>

      <%= f.submit "Create Meeting"%>
      <% end %>

</div>